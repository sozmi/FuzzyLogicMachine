<UserControl x:Class="WpfApp.Views.Linguistic.DG_FuzzyVariables"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views.Linguistic"
             xmlns:linguistic="clr-namespace:WpfApp.ViewModels.Linguistic" 
             xmlns:converters="clr-namespace:WpfApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="WrappedColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock TextWrapping="Wrap" Text="{Binding}"></TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <DataGrid DockPanel.Dock="Left"
              AutoGenerateColumns="False"
              CanUserReorderColumns="False"
              CanUserSortColumns="False"
              Style="{StaticResource BaseStyle}"
              DataContext="{Binding DG_Terms}"
              ItemsSource="{Binding Items}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}"/>
            <DataGridTemplateColumn Header="Тип функции">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox ItemsSource="{Binding Path=FuncViewModel.Type, Converter={converters:EnumToCollectionConverter}, Mode=OneTime}"
                     SelectedValuePath="Item1"
                     DisplayMemberPath="Item2"
                     SelectedValue="{Binding FuncViewModel.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ></ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Header="Параметры" CellStyle="{StaticResource BaseStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <DataGrid ItemsSource="{Binding FuncViewModel.Params}"
                                  Style="{StaticResource BaseStyle}"
                                  HeadersVisibility="None"
                                  CanUserResizeColumns="False"
                                  CanUserResizeRows="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="False">
                        </DataGrid>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
